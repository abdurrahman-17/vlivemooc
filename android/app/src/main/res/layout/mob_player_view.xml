<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <FrameLayout
        android:id="@id/mob_player_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@id/mob_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:padding="@dimen/size_10dp"
        android:visibility="gone"
        app:buttonGravity="center_vertical"
        app:contentInsetStart="@dimen/size_50dp"
        app:menu="@menu/mob_menu_player"
        app:navigationIcon="@drawable/ic_mob_back"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/AppTheme.TextBodyMedium.PlanType16Sp"
        app:titleTextColor="@color/white" />


</FrameLayout>
